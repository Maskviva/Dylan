    <link href="../../style.css" id="my-style-sheet" rel="stylesheet"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="../../favicon.ico" rel="shortcut icon">
    <title>QuestiAI</title>

    <style>
        :root {
            --shadow-color: rgba(0, 0, 0, 0.1);
        }

        .card-box {
            position: relative;
            top: 0;
            width: 100%;
            height: 100%;
            padding: 16px;
            margin: 10px;
            border-radius: 8px;
            background-color: white;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .card {
            width: 150px;
            height: 110px;
            cursor: pointer;
            background: white;
            padding: 18px;
            margin-bottom: 15px;
            border-radius: 8px;
            display: flex;
            align-items: end;
            justify-content: center;
            text-decoration: none;
            color: black;
            position: relative;
            box-shadow: 0 4px 12px var(--shadow-color);
            transition: all 0.2s ease-out;
        }

        .card:hover {
            font-size: 34px;
            transform: translateY(-3px);
        }

        .card:active {
            transform: translateY(1px);
        }

        .card h2 {
            font-size: 28px;
        }

        .card-onload {
            animation: onload 0.5s ease-in-out;
        }

        @keyframes onload {
            0% {
                opacity: 0;
                transform: translateY(50px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
<header>
    <div class="header-box">
        <button aria-label="Toggle Menu" class="header-button" onclick="toggleMenu()" type="button"><i
                    class="fas fa-bars"></i></button>
        <h2>你好，欢迎来到QuestiAI</h2>
    </div>
    <div class="user-box" style="z-index: 999;">
