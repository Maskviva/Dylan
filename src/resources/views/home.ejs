<script>
    const subjects = {
        chinese: "learn/chinese",
        mathematics: "learn/mathematics",
        english_vocabulary: "learn/english_vocabulary",
        english_composition: "learn/english_composition",
        physics: "learn/physics",
        chemistry: "learn/chemistry",
        biology: "learn/biology",
        history: "learn/history",
        geography: "learn/geography",
        morality_and_rule_of_law: "learn/morality-and-rule-of-law"
    };

    for (const [subject, url] of Object.entries(subjects)) {
        const element = document.getElementById(subject);
        element.addEventListener("click", () => {
            window.location.href = url;
        });
    }

    // 创建观察者实例
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            const en = entry.target;
            if (entry.isIntersecting && en.classList.contains("subject-card")) {
                en.classList.add('subject-card-onload');
            }
        });
    });

    window.addEventListener('load', () => {
        document.getElementById('chinese').classList.add('subject-card-onload');
        document.getElementById('mathematics').classList.add('subject-card-onload');
        for (const subject of Object.keys(subjects)) {
            const target = document.getElementById(subject);
            observer.observe(target);
        }
    });
</script>
<script>
    let index = 0;
    const $slides = $('.slide');

    $slides.each(function (index) {
        $(this).css('left', `${index}00%`);
    })

    setInterval(() => {
        index = (index + 1) % $slides.length;
        $slides.css('transform', `translateX(-${index}00%)`);
        $(`#slide-${index + 1}`).prop('checked', true);
    }, 3000);

    function toggleSlide(i) {
        $slides.css('transform', `translateX(-${i}00%)`);
        index = i;
    }

    function toggleSlide_btn(bool) {
        let i = index;
        if (bool)
            i = (i + 1) % $slides.length;
        else
            i = (i - 1 + $slides.length) % $slides.length;
        $slides.css('transform', `translateX(-${i}00%)`);
        index = i;
        $(`#slide-${index + 1}`).prop('checked', true);
    }
</script>
