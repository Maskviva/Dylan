        :root {
            --primary-blue: #00B4D8;
            --primary-orange: #FF6B6B;
            --card-radius: 12px;
            --shadow-color: rgba(0, 0, 0, 0.1);
            --transition-curve: cubic-bezier(0.4, 1.3, 0.6, 1);
            --gradient-dark: #1A1A1A;
            --gradient-mid: #867272;
            --gradient-light: rgba(150, 150, 150, 0.36);
        }

        .carousel-box {
            margin-top: 10px;
            background: linear-gradient(180deg,
            var(--gradient-dark) 0%,
            var(--gradient-mid) 50%,
            var(--gradient-light) 100%);
            border-radius: 15px;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .carousel-box-h {
            width: 10%;
            height: 100%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .carousel-box-h h3 {
            writing-mode: vertical-lr;
            text-align: center;
            text-orientation: upright;
            color: #00F3FF;
            text-shadow: 0 0 5px #8A2BE2, 0 0 10px #00F3FF;
        }

        .carousel {
            position: relative;
            width: 80%;
            height: 150px;
            margin: 0;
            padding: 0;
            list-style: none;
            background-color: #a0a0a0;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.25s var(--transition-curve);
        }

        .carousel::after {
            content: '';
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 60px;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.3), transparent);
        }

        .slide {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            position: absolute;
            top: 0;
            left: 0;
            background-color: rgb(255, 255, 255);
            transition: all 0.5s var(--transition-curve);
        }

        .slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .slideToggle {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            position: absolute;
            z-index: 1;
        }

        .slideToggle-btn {
            width: 30px;
            height: 60px;
            border: none;
            position: absolute;
            background-color: rgba(176, 176, 176, 0.5);
            transition: background-color 0.2s ease;
        }

        .slideToggle-btn:hover {
            background-color: rgba(154, 154, 154, 0.8);
            cursor: pointer;
        }

        #slideToggle-btn-1 {
            right: 0;
        }

        #slideToggle-btn-2 {
            left: 0;
        }

        .slideToggle input {
            margin: 5px;
            position: relative;
            top: 46%;
            appearance: none;
            width: 12px;
            height: 12px;
            border: 1px solid #cccccc;
            border-radius: 50%;
            cursor: pointer;
            background-color: #ffffff;
            transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .slideToggle input:hover {
            border-color: #0000ff;
        }

        .slideToggle input:checked {
            background-color: #000000;
            scale: 1.2;
            border-radius: 10px;
            width: 16px;
            border-color: #ffffff;
            box-shadow: 0 0 8px rgba(24, 144, 255, 0.5);
        }

        .main-content {
            width: 100%;
            background-color: white;
            border-radius: 15px;
        }

        .knowledge-portal {
            margin: 0 auto;
            padding: 20px;
        }

        .focus-area {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .main-subject {
            background: white;
            border-radius: var(--card-radius);
            padding: 20px;
            box-shadow: 0 4px 12px var(--shadow-color);
            position: relative;
        }

        .progress-ring {
            width: 60px;
            height: 60px;
            position: relative;
        }

        .progress-circle {
            stroke: var(--primary-blue);
            transition: stroke-dashoffset 0.5s ease-out;
        }

        .subject-section {
            margin: 30px 0;
            padding: 20px;
            background: #f8f9fa;
            box-shadow: 0 4px 12px var(--shadow-color);
            border-radius: var(--card-radius);
        }

        .section-title {
            color: var(--primary-blue);
            border-left: 4px solid currentColor;
            padding-left: 12px;
            margin: 0 0 20px;
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 15px;
        }

        .subject-card {
            cursor: pointer;
            background: white;
            padding: 18px;
            margin-bottom: 15px;
            border-radius: 8px;
            position: relative;
            box-shadow: 0 4px 12px var(--shadow-color);
            transition: transform 0.2s ease-out;
        }

        .subject-card:hover {
            transform: translateY(-3px);
        }

        .subject-card:active {
            transform: translateY(1px);
        }

        .status-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 0.8em;
            padding: 2px 8px;
            border-radius: 4px;
        }

        @keyframes onload {
            0% {
                opacity: 0;
                transform: translateY(50px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

